export ANDROID_HOME=~/sdks/android-sdks
export GRADE_HOME=~/sdks/gradle
export SCALA_HOME=~/sdks/scala
export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/CurrentJDK/Home
export PATH=${PATH}:${ANDROID_HOME}/platform-tools:${ANDROID_HOME}/tools
export PATH=${PATH}:${GRADE_HOME}/bin
export PATH=${PATH}:${JAVA_HOME}/bin
export PATH=${PATH}:${SCALA_HOME}/bin
export PATH=${PATH}:~/bin
export PATH=${PATH}:~/.rvm/bin

# MacPorts
export PATH=/opt/local/bin:/opt/local/sbin:$PATH

# jpegoptim, optipng, advpng
export PATH=$PATH:/Applications/ImageOptim.app/Contents/MacOS/
